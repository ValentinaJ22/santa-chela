<section class="hero">
	<div class="hero-content">
		<img src="https://imgfz.com/i/jwadVGc.png" alt="Santa Chela Logo" class="logo">
		<h1>Santa Chela</h1>
		<p>Donde los buenos momentos fluyen</p>
	</div>
	<div class="hero-background"></div>
</section>

<style>
	.hero {
		height: 100vh;
		position: relative;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: url('http://imgfz.com/i/sYte156.jpeg');
		background-size: cover;
		background-position: center;
		filter: brightness(0.6);
		z-index: 1;
	}

	.hero-content {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%) rotate(-5deg);
		z-index: 2;
		text-align: center;
		width: 100%;
		text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
	}

	.logo {
		width: 200px;
		height: auto;
		margin-bottom: 2rem;
		filter: drop-shadow(0 0 20px rgba(252, 176, 64, 0.5));
	}

	h1 {
		font-size: 8rem;
		color: var(--yellow);
		margin: 0;
		line-height: 1;
		letter-spacing: 2px;
		background: linear-gradient(45deg, var(--yellow), #fff, var(--yellow));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		text-shadow: none;
		animation: shine 3s ease-in-out infinite;
	}

	@keyframes shine {
		0% {
			background-position: -500%;
		}
		100% {
			background-position: 500%;
		}
	}

	p {
		font-size: 2rem;
		color: white;
		margin: 1rem 0 0;
		font-weight: 300;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 4rem;
		}
		p {
			font-size: 1.5rem;
		}
		.logo {
			width: 150px;
		}
	}
</style>