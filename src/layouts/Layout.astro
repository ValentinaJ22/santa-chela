---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Santa Chela Bar - El mejor ambiente y las mejores bebidas" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="https://imgfz.com/i/jwadVGc.png" />
		<link href="https://fonts.googleapis.com/css2?family=Madrigal-Grotesque:wght@400;700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--yellow: #FCB040;
		--black: #000000;
		--brown: #1E140D;
		--red: #A00E23;
		--gray: #7B8484;
		--bg-gradient: linear-gradient(135deg, #2A1B2E 0%, #1E140D 100%);
	}
	html {
		font-family: 'Montserrat', sans-serif;
		background: var(--bg-gradient);
		color: white;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
	}
	h1, h2, h3, h4 {
		font-family: 'Madrigal-Grotesque', serif;
		margin: 0;
	}

	.section-title {
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 4rem;
		gap: 2rem;
	}

	.ornament {
		width: 100px;
		height: 2px;
		background: linear-gradient(to var(--direction, right), transparent, var(--yellow));
		position: relative;
	}

	.ornament::before, .ornament::after {
		content: '';
		position: absolute;
		width: 10px;
		height: 10px;
		border: 2px solid var(--yellow);
		transform: rotate(45deg);
	}

	.ornament.left {
		--direction: right;
	}

	.ornament.right {
		--direction: left;
	}
</style>